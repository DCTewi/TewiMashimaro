[Unit]
Description=TewiMashimaro

[Service]
WorkingDirectory=/home/mashimaro
ExecStart=/usr/bin/env mashimaro -d /home/mashimaro --cert="/etc/letsencrypt/live/__USER_DOMAIN__/fullchain.pem" --key="/etc/letsencrypt/live/__USER_DOMAIN__/privkey.pem"
Restart=always
RestartSec=10
SyslogIdentifier=tewi-mashimaro
KillSignal=SIGINT
User=root
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target

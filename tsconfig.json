{
    "compilerOptions": {
        "target": "ES6",

        "module": "commonjs",
        "moduleResolution": "node",

        "rootDir": "./src",
        "outDir": "./dist",

        "typeRoots": ["@types"],

        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["./node_modules"],
    "include": ["./src/**/*"]
}
